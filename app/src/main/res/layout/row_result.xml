<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Go leg -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <ImageView
                android:id="@+id/image_go_airline_logo"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="fitCenter"/>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:padding="5dp">

                <!-- TextView Go Time -->
                <TextView
                    android:id="@+id/txt_go_time"
                    style="@android:style/TextAppearance.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- TextView Go Airline -->
                <TextView
                    android:id="@+id/txt_go_airline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:padding="5dp">

                <!-- TextView Go Type -->
                <TextView
                    android:id="@+id/txt_go_type"
                    style="@android:style/TextAppearance.Medium"
                    android:text="Direct"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- TextView Go Duration -->
                <TextView
                    android:id="@+id/txt_go_duration"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <!-- Return leg -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <ImageView
                android:id="@+id/image_return_airline_logo"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="fitCenter"/>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:padding="5dp">

                <!-- TextView Return Time -->
                <TextView
                    android:id="@+id/txt_return_time"
                    style="@android:style/TextAppearance.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- TextView Return Airline -->
                <TextView
                    android:id="@+id/txt_return_airline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:padding="5dp">

                <!-- TextView Return Type -->
                <TextView
                    android:id="@+id/txt_return_type"
                    style="@android:style/TextAppearance.Medium"
                    android:text="Direct"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- TextView Return Duration -->
                <TextView
                    android:id="@+id/txt_return_duration"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <!-- Bottom part -->

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#343434"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/image_smiley"
            android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_smiley"/>

        <TextView
            android:id="@+id/txt_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        
        <TextView
            android:id="@+id/txt_price"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/txt_provider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txt_price"/>

    </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>